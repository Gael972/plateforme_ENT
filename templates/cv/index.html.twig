{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>DateD</th>
                <th>DateF</th>
                <th>Photos</th>
                <th>Evaluation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.intitule }}</td>
                <td>{{ cv.dateD ? cv.dateD|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cv.dateF ? cv.dateF|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cv.photos }}</td>
                <td>{{ cv.evaluation }}</td>
                <td>
                    <a href="{{ path('cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cv_new') }}">Create new</a>
{% endblock %}
